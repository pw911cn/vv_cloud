########################## 服务系统配置 ##########################
server:
  port: 8080

spring:
  application:
    name: plugin_zuul
#  profiles:
#    active: dev
########################## 指明配置中心 ##########################
  cloud:
    config:
      uri: http://localhost:8762        #Config server的uri
      profile: dev                       #指定的环境
      label: master                      #指定分支

########################## 指明注册中心 ##########################
eureka:
  client:
    serviceUrl:
      defaultZone: http://127.0.0.1:8761/eureka/
      
########################## 网关配置 ########################## 
zuul:
  routes:
    #服务提供者工程的上service-id(访问路径为:zuul的ip和端口/biz_base(service-id)/rest接口方法)
    biz_base: 
      path: /biz_base/**
      serviceId: biz_base
    biz_pub: 
      path: /biz_pub/**
      serviceId: biz_pub

