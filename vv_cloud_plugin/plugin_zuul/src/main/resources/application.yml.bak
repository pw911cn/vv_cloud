# ################################# 应用服务器配置 ##################################
server:
  port: 8080
  
spring:
  application:
    name: plugin_zuul
# ################################# 网关配置 ################################## 
zuul:
  routes:
    #服务提供者工程的上service-id(访问路径为:zuul的ip和端口/biz_base(service-id)/rest接口方法)
    biz_base: 
      path: /biz_base/**
      serviceId: biz_base
    biz_pub: 
      path: /biz_pub/**
      serviceId: biz_pub

#    first:
#      path: /first/**
#      url: http://first.example.com

# ################################# 网关配置 ################################## 
eureka:
  instance:
    preferIpAddress: true
  client:
    registerWithEureka: true
    fetchRegistry: true

